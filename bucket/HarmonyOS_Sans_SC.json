{
    "version": "2.0",
    "license": "Apache-2.0",
    "homepage": "https://gitee.com/openharmony/resources/tree/master/fonts",
    "url": [
        "https://gitee.com/openharmony/resources/blob/master/fonts/HarmonyOS_Sans_SC_Black.ttf",
        "https://gitee.com/openharmony/resources/blob/master/fonts/HarmonyOS_Sans_SC_Bold.ttf",
        "https://gitee.com/openharmony/resources/blob/master/fonts/HarmonyOS_Sans_SC_Light.ttf",
        "https://gitee.com/openharmony/resources/blob/master/fonts/HarmonyOS_Sans_SC_Medium.ttf",
        "https://gitee.com/openharmony/resources/blob/master/fonts/HarmonyOS_Sans_SC_Regular.ttf",
        "https://gitee.com/openharmony/resources/blob/master/fonts/HarmonyOS_Sans_SC_Thin.ttf",
        ],
    "installer": {
        "script": [
            "Get-ChildItem $dir -filter '*.ttf' | ForEach-Object {",
            "  New-ItemProperty -Path 'HKLM:\\SOFTWARE\\Microsoft\\Windows NT\\CurrentVersion\\Fonts' -Name $_.Name.Replace($_.Extension, ' (TrueType)') -Value $_.Name -Force | Out-Null",
            "  Copy-Item $_.FullName -destination \"$env:windir\\Fonts\"",
            "}"
        ]
    },
    "uninstaller": {
        "script": [
            "Get-ChildItem $dir -filter '*.ttf' | ForEach-Object {",
            "  Remove-ItemProperty -Path 'HKLM:\\SOFTWARE\\Microsoft\\Windows NT\\CurrentVersion\\Fonts' -Name $_.Name.Replace($_.Extension, ' (TrueType)') -Force -ErrorAction SilentlyContinue",
            "  Remove-Item \"$env:windir\\Fonts\\$($_.Name)\" -Force -ErrorAction SilentlyContinue",
            "}",
            "Write-Host \"The ' HarmonyOS Sans SC' Font family has been uninstalled and will not be present after restarting your computer.\" -Foreground Magenta"
        ]
    }
}
